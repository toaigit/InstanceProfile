{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Action": [
                "s3:Get*",
                "s3:List*",
                "ec2:AssociateAddress",
                "ec2:CreateSnapshot",
                "ec2:CreateSnapshots",
                "ec2:DeleteSnapshot",
                "ec2:DescribeVolumes",
                "ec2:DescribeInstances",
                "ec2:DescribeSnapshots",
                "autoscaling:UpdateAutoScalingGroup",
                "secretsmanager:DescribeSecret",
                "secretsmanager:GetSecretValue",
                "sts:DecodeAuthorizationMessage"
            ],
            "Effect": "Allow",
            "Resource": "*"
        }
    ]
}
